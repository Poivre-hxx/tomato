{
  "name": "tomato",
  "version": "1.0.1",
  "description": "番茄钟",
  "main": "./dist/electron.js",
  "scripts": {
    "start:main": "webpack --config ./webpack/webpack.main.dev.js && electron ./dist/electron.js",
    "start:render": "webpack-dev-server --config ./webpack/webpack.render.dev.js",
    "build:main": "webpack --config ./webpack/webpack.main.prod.js",
    "build:render": "webpack --config ./webpack/webpack.render.dev.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "npm run build:main && npm run build:render",
    "install:electron": "ELECTRON_MIRROR=https://cdn.npm.taobao.org/dist/electron/ npm install electron",
    "electron:icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten"
  },
  "build": {
    "appId": "tomato.ElectronReact",
    "productName": "tomato",
    "copyright": "Copyright © 2023 ${author}",
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/"
    ],
    "directories": {
      "output": "package"
    },
    "mac": {
      "icon": "./build/icons/256x256.png"
    },
    "win": {
      "icon": "./build/icons/256x256.png"
    }
  },
  "author": "poivre",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "date-fns": "^2.29.3",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-modules-commonjs": "^7.14.0",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/react": "^18.0.25",
    "@types/react-css-modules": "^4.6.2",
    "@types/react-dom": "^18.0.9",
    "@types/react-redux": "^7.1.24",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "autoprefixer": "^9.0.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-react-css-modules": "^5.2.6",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^3.0.0",
    "electron": "^12.1.0",
    "electron-builder": "^23.6.0",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^7.26.0",
    "eslint-config-alloy": "^4.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.2",
    "less": "^3.12.2",
    "less-loader": "^6.2.0",
    "postcss-less": "^3.1.4",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.3.0",
    "style-loader": "^2.0.0",
    "typescript": "^4.9.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.3",
    "webpack-merge": "^5.8.0"
  }
}
